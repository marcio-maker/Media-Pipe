  <main>
    <div class="media-section">
      <video id="video" autoplay muted playsinline></video>
      <canvas id="canvas"></canvas>
    </div>
    <div class="cards">
      <div class="card" id="card-formato">
        <h2>Formato do Rosto</h2>
        <p id="formato-rosto">Aguardando avaliação...</p>
      </div>
      <div class="card" id="card-corte">
        <h2>Sugestão de Corte</h2>
        <p id="sugestao-corte">Aguardando avaliação...</p>
        <p id="sugestao-evitar"></p>
      </div>
      <div class="card" id="card-produto">
        <h2>Produto de Finalização</h2>
        <p id="sugestao-produto">Aguardando avaliação...</p>
        <a id="link-produto" href="#" target="_blank" rel="noopener">Ver no Mercado Livre</a>
      </div>
    </div>
    <br>
    <button id="salvar">Salvar resultado como imagem</button>
  </main>

<script src="https://cdn.jsdelivr.net/npm/@mediapipe/face_mesh/face_mesh.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@mediapipe/camera_utils/camera_utils.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/html2canvas.min.js"></script>

<script>
  const video = document.getElementById('video');
  const canvas = document.getElementById('canvas');
  const ctx = canvas.getContext('2d');
  
  // Distância entre dois points
  function distancia(a, b) {
    return Math.sqrt(Math.pow(a.x - b.x, 2) + Math.pow(a.y - b.y, 2));  
  }
  
  // Cálculo do formado do rosto
  function calculaFormatoRosto(landmarks) {
    const larguraTesta = distancia(landmarks[234], landmarks[454]);
    const larguraBochecha = distancia(landmarks[93], landmarks[323]);
    const larguraMaxilar = distancia(landmarks[172], landmarks[397]);
    const alturaRosto = distancia(landmarks[10], landmarks[152]);

    if (Math.abs(larguraBochecha - larguraMaxilar) < 0.03 &&
        Math.abs(larguraBochecha - larguraTesta) < 0.03 &&
        alturaRosto / larguraBochecha < 1.1) {
      return "Redondo";
    }
    if (Math.abs(larguraBochecha - larguraMaxilar) < 0.03 &&
        Math.abs(laguraBochecha - larguraTesta) < 0.03 &&
        alturaRosto / larguraBochecha >= 1.1) {
      return "Quadrado";
    }
    if (alturaRosto / larguraBochecha > 1.5) {
      return "Retangular";
    }
    if (larguraBochecha > larguraTesta && larguraBochecha > larguraMaxilar) {
      return "Diamante";
    }
    if (larguraTesta > larguraBochecha && larguraTesta > larguraMaxilar) {
      return "Coração";
    }
    if (alturaRosto / larguraBochecha > 1.3 && larguraBochecha > larguraMaxilar) {
      return "Oval";
    }
    return "Indefinido";
  }
  
  //Sugestão de corte
  function sugestaoCorte(formato) {
    const sugestoes = {
      Oval: {corte:"Quase todos estilos caem bem.",evitar:"Franjas muito pesadas."},
      Redondo: {corte:"Cortes que criam volume no topo.",evitar:"Volume nas laterais."},
      Quadrado: {corte:"Cortes com topo levemente volumoso.",evitar:"Cortes muito retos."},
      Retangular: {corte:"Franja ou volume nas laterais.",evitar:"Topetes muito altos."},
      Coração: {corte:"Cortes que deixem volume na parte de baixo.",evitar:"Penteados muito altos."},
      Diamante: {corte:"Franja na testa e volume nas laterais.",evitar:"Penteados puxados para trás."},
      Indefinido: {corte:"Melhor mover o rosto para avaliação.",evitar:""}
    };
    return sugestoes[formato] || sugestoes.Indefinido;
  }
  
  //Sugestão de finalização
  function sugestaoProdutoFinalizacao(formato) {
    const produtos = {
      Oval: { nome:'Mousse Modelador', link:'https://www.mercadolivre.com.br/' },
      Redondo: { nome:'Gel de Volume', link:'https://www.mercadolivre.com.br/' },
      Quadrado: { nome:'Cera Modeladora', link:'https://www.mercadolivre.com.br/' },
      Retangular: { nome:'Creme Texturizador', link:'https://www.mercadolivre.com.br/' },
      Coração: { nome:'Finalizador Leve', link:'https://www.mercadolivre.com.br/' },
      Diamante: { nome:'Pomada Modeladora', link:'https://www.mercadolivre.com.br/' },
      Indefinido: { nome:'Produto Neutro', link:'https://www.mercadolivre.com.br/' }
    };
    return produtos[formato] || produtos.Indefinido;
  }
  
  const faceMesh = new FaceMesh({ 
    locateFile: (file) => `https://cdn.jsdelivr.net/npm/@mediapipe/face_mesh/${file}` 
  });
  faceMesh.setOptions({ maxNumFaces: 1, refineLandmarks: true });

  faceMesh.onResults((results) => {
    canvas.width = video.videoWidth;
    canvas.height = video.videoHeight;

    ctx.save();
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    ctx.drawImage(results.image, 0, 0, canvas.width, canvas.height);

    if (results.multiFaceLandmarks && results.multiFaceLandmarks.length > 0) {
      const landmarks = results.multiFaceLandmarks[0];
      // Desenha contorno pontilhado
      ctx.strokeStyle = "#0ff";
      ctx.lineWidth = 2;
      ctx.setLineDash([5, 5]);
      ctx.beginPath();
      landmarks.forEach((point, idx) => {
        const x = point.x * canvas.width;
        const y = point.y * canvas.height;
        if (idx === 0) ctx.moveTo(x, y);
        else ctx.lineTo(x, y);
      });
      ctx.closePath();
      ctx.stroke();

      // Analisa o formado do rosto
      const formado = calculaFormatoRosto(landmarks);
      const { corte, evitar } = sugestaoCorte(formado);
      const finalizacao = sugestaoProdutoFinalizacao(formado);
  
      // Atualiza o HTML
      document.getElementById('formato-rosto').innerText = formado;
      document.getElementById('sugestao-corte').innerText = corte;
      document.getElementById('sugestao-evitar').innerText = "Evitar: " + evitar;
      document.getElementById('sugestao-produto').innerText = finalizacao.nome;
      document.getElementById('link-produto').href = finalizacao.link;

      document.querySelectorAll('.card').forEach(card => {
        card.classList.remove('active'); // reseta
        void card.offsetWidth; // restart
        card.classList.add('active'); // anima
      });

    } else {
      document.getElementById('formato-rosto').innerText = "Rosto não detectado.";
    }
    ctx.restore();
  });

  const camera = new Camera(video, {
    onFrame: async () => {
      await faceMesh.send({ image: video });
    },
    width: 480,
    height: 360
  });

  camera.start();

  document.getElementById('salvar').addEventListener('click', () => {
    html2canvas(document.querySelector('main')).then(canvas => {
      const link = document.createElement('a');
      link.href = canvas.toDataURL('image/png');
      link.download = 'analise-facial.png';
      link.click();
    });
  });

</script>

</body>
</html>
